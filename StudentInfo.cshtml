@model demopopway.Models.Student
@{
    ViewBag.Title = "StudentInfo";
}
<style>
    .error{
        color:red;
    }
</style>
<br />
<br />
<a href="@Url.Action("GetStudent","Student")"><i class="btn btn-success">Get List</i></a>
<br />
<br />
@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.ID)
            <lable><b>Name :</b></lable>
            @Html.ValidationMessageFor(x => x.Student_Name,"",new {@class="error"})
            @Html.TextBoxFor(x => x.Student_Name, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <lable><b>Age :</b></lable>
            @Html.ValidationMessageFor(x => x.Student_Age, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Student_Age, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <lable><b>Number :</b></lable>
            @Html.ValidationMessageFor(x => x.Contact_Number, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Contact_Number, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <lable><b>Address :</b></lable>
            @Html.ValidationMessageFor(x => x.Address, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
}

